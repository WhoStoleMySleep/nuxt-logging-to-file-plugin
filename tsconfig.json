{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "types": ["@nuxt/kit", "@nuxt/schema", "@types/node"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false,
    "sourceMap": false
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist"]
}