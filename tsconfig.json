{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "types": [
      "@nuxt/kit",
      "@nuxt/schema",
      "@types/node"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*", "lib/types.d.ts"],
  "exclude": ["node_modules"]
}